<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"

    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/job_profile_image_search"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/job_user_search"
            android:text="User name"
            android:gravity="center"
            android:layout_below="@id/job_profile_image_search"
            android:textSize="12sp"
            />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/job_name_search"
                android:text="job name"
                android:gravity="center"
                android:layout_below="@id/job_user_search"
                android:textSize="12sp"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/job_address_search"
            android:text="job address"
            android:gravity="center"
            android:layout_below="@id/job_name_search"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/job_description_search"
            android:text="job description"
            android:gravity="center"
            android:layout_below="@id/job_address_search"
            android:textSize="12sp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_description_search"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="Message">

        </Button>
    </RelativeLayout>
</RelativeLayout>