<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/search_list_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart ="0dp"
        android:paddingHorizontal="36dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_list_element_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src ="@drawable/profile"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="15dp"
            />
            <TextView
                android:id="@+id/search_list_element_mgs"
                android:layout_width="239dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="43dp"
                android:layout_marginBottom="23dp"
                android:layout_marginStart="100dp"
                android:contentDescription="jobmart"
                android:text="Going in a minute, see you later"
                android:gravity="start|top"/>
        <TextView
            android:id="@+id/search_list_element_user_name"
            android:layout_width="239dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="100dp"
            android:text="Raj Adhikari"
            android:gravity="bottom"/>



    </RelativeLayout>
</RelativeLayout>